{
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    "css",
    "typescriptreact",
    "javascriptreact",
    "typescript",
    "javascript",
    "golang"
  ],
  "eslint.autoFixOnSave": true,
  "eslint.autoFix": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    }
  },
  "tsserver": {
    "enable": true
  },
  "diagnostic.checkCurrentLine": true
}
